{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "src/assets",
    "src/components",
    "src/pages",
    "src/services",
    "src/static"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.css"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,scss"
}
